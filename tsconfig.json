{
  "compilerOptions": {
    "target": "es5", // Specify the target ECMAScript version
    "module": "commonjs", // Specify the module system
    "jsx": "preserve", // Preserve JSX syntax so that it can be handled by Next.js
    "allowJs": true, // Allow JavaScript files to be compiled as TypeScript
    "skipLibCheck": true, // Skip type checking of React and other libraries
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES modules
    "resolveJsonModule": true, // Enable automatic resolving of JSON modules
    "paths": {
      "app/*": [
        "./src/app/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public"
  ] // Exclude the node_modules and public directories
}